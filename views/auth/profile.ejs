<%- include('../partials/loginnav.ejs') %> 
<div class="container bootstrap snippet">
   
    <div class="row">
  		<div class="col-sm-3"><!--left col-->
              

      <div class="text-center">
        <img src="/images/<%= user.image %> " class="avatar img-circle img-thumbnail" alt="avatar">
        
      </div></hr><br>

       
        
          
        </div><!--/col-3-->
    	<div class="col-sm-9">
            <% if(hasErrors) {%>
                           
                <div class="alert alert-danger">
                   <a href="#" class="close" data-dismiss="alert" aria-label="close">
                       &times;
                   </a>
                   <%= messages %>
                    
                </div>
            <% } %>
       

        <% if(success){%>
            <div class="alert alert-success">
              <strong> <%= success %></strong>
            </div>
            <% } %>
          <div class="tab-content">
            <div class="tab-pane active" id="home">
              
                  <form class="form" action="/profile/update/<%=user._id %>  " method="POST" enctype="multipart/form-data">
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="first_name"><h4>First name</h4></label>
                              <input type="text" class="form-control" name="firstname"  placeholder="first name" value="<%= user.firstname %> " >
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="last_name"><h4>Last name</h4></label>
                              <input type="text" class="form-control" name="lastname"  placeholder="last name" value="<%= user.lastname %> ">
                          </div>
                      </div>
          
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="phone"><h4>Phone</h4></label>
                              <input type="text" class="form-control" name="phoneno" placeholder="enter phone"  value="<%= user.phoneno %> ">
                          </div>
                      </div>
          
                      <div class="form-group">
                          <div class="col-xs-6">
                             <label for="mobile"><h4>Job Titlte</h4></label>
                              <input type="text" class="form-control" name="jobtitle" placeholder="Enter your job title" value="<%= user.jobtitle %> ">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="email"><h4>Email</h4></label>
                              <input type="email" class="form-control" name="email"  placeholder="you@email.com" disabled value="<%= user.email %> ">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="email"><h4>Skills</h4></label>
                              <input type="text" class="form-control"  name="skills" placeholder="Enter Your skills"  value="<%= user.skills %> ">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="password"><h4>City/Town</h4></label>
                              <input type="text" class="form-control" name="city" value="<%= user.city %> ">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="username"><h4>Username</h4></label>
                              <input type="text" class="form-control" name="username"  placeholder="Enter Username"  value="<%= user.username %> ">
                          </div>
                      </div>
                       <!--profile image-->
                      <div class="form-group">
                          
                        <div class="col-xs-6">
                          <label for="username"><h4>Profile Image
                           <input type="file" class="text-center center-block file-upload" name="file" value="<%= user.file %> "></h4></label>
                        </div>
                    </div>
                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                                
                               	<button class="btn btn-primary btn-lg active"><i class="glyphicon glyphicon-repeat"></i> Save</button>
                            </div>
                      </div>
              	</form>
              
              <hr>
              
            
            
               
              </div><!--/tab-pane-->
          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->
                                                      
<script>
$(document).ready(function() {

    
var readURL = function(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $('.avatar').attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
    }
}


$(".file-upload").on('change', function(){
    readURL(this);
});
});
</script>